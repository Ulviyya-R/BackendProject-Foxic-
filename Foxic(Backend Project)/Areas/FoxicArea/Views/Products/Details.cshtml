@model Foxic_Backend_Project_.ViewModels.ProductVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ProductVM</h4>
    <hr />
    <dl class="row">
        <div class="row images my-4">
            @foreach (var image in Model.AllImages)
            {
                <div class="col-2">
                    <div class="card" style="width:152px">
                        <img style="width:150px;height:150px;object-fit:contain" src="~/assets/images/skins/fashion/products/@image.Path" class="card-img-top @(image.IsMain == true ? "main" : "") @(image.IsMain==null ? "hover" : "")" />
                      
                    </div>
                </div>
            }
        </div>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiscountPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiscountPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LongDesc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LongDesc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GlobalTabId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GlobalTabId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CollectionId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CollectionId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DeleteColorSize)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DeleteColorSize)
        </dd>
    </dl>
</div>
